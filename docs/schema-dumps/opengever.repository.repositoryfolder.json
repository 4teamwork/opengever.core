{
    "portal_type": "opengever.repository.repositoryfolder",
    "title": "Ordnungsposition",
    "schemas": [
        {
            "name": "opengever.repository.repositoryfolder.IRepositoryFolderSchema",
            "fields": [
                {
                    "name": "description",
                    "type": "Text",
                    "title": "Beschreibung",
                    "desc": "Eine kurze Beschreibung des Inhalts.",
                    "required": false
                },
                {
                    "name": "valid_from",
                    "type": "Date",
                    "title": "G\u00fcltig ab",
                    "desc": "",
                    "required": false
                },
                {
                    "name": "valid_until",
                    "type": "Date",
                    "title": "G\u00fcltig bis",
                    "desc": "",
                    "required": false
                },
                {
                    "name": "location",
                    "type": "TextLine",
                    "title": "Standort",
                    "desc": "",
                    "required": false
                },
                {
                    "name": "referenced_activity",
                    "type": "TextLine",
                    "title": "Leistung",
                    "desc": "",
                    "required": false
                },
                {
                    "name": "former_reference",
                    "type": "TextLine",
                    "title": "Fr\u00fcheres Zeichen",
                    "desc": "",
                    "required": false
                },
                {
                    "name": "addable_dossier_types",
                    "type": "List",
                    "title": "Erlaubte Spezialdossiers",
                    "desc": "W\u00e4hlen Sie die Spezialdossiers aus, die in dieser Ordnungsposition erlaubt sind.",
                    "required": false
                }
            ],
            "fieldsets": {
                "fieldset_common": [
                    "description",
                    "valid_from",
                    "valid_until",
                    "location",
                    "referenced_activity",
                    "former_reference"
                ]
            }
        },
        {
            "name": "opengever.base.behaviors.classification.IClassification",
            "fields": [
                {
                    "name": "classification",
                    "type": "Choice",
                    "title": "Klassifikation",
                    "desc": "Grad, in dem die Unterlagen vor unberechtigter Einsicht gesch\u00fctzt werden m\u00fcssen",
                    "required": true,
                    "default": "unprotected",
                    "vocabulary": [
                        "unprotected",
                        "confidential",
                        "classified"
                    ]
                },
                {
                    "name": "privacy_layer",
                    "type": "Choice",
                    "title": "Datenschutzstufe",
                    "desc": "Markierung, die angibt, ob die Unterlagen besonders sch\u00fctzenswerte Personendaten oder Pers\u00f6nlichkeitsprofile gem\u00e4ss Datenschutzrecht enthalten",
                    "required": true,
                    "default": "privacy_layer_no",
                    "vocabulary": [
                        "privacy_layer_no",
                        "privacy_layer_yes"
                    ]
                },
                {
                    "name": "public_trial",
                    "type": "Choice",
                    "title": "\u00d6ffentlichkeitsstatus",
                    "desc": "Angabe, ob die Unterlagen gem\u00e4ss \u00d6ffentlichkeitsgesetz zug\u00e4nglich sind oder nicht",
                    "required": true,
                    "default": "unchecked",
                    "vocabulary": [
                        "unchecked",
                        "public",
                        "limited-public",
                        "private"
                    ]
                },
                {
                    "name": "public_trial_statement",
                    "type": "Text",
                    "title": "Bearbeitungsinformation",
                    "desc": "Datum Gesuch, Gesuchsteller, Datum Entscheid, Verweis auf GEVER-Gesuchdossier",
                    "required": false,
                    "default": ""
                }
            ],
            "fieldsets": {
                "fieldset_classification": [
                    "classification",
                    "privacy_layer",
                    "public_trial",
                    "public_trial_statement"
                ]
            }
        },
        {
            "name": "opengever.base.behaviors.translated_title.ITranslatedTitle",
            "fields": [
                {
                    "name": "title_de",
                    "type": "TextLine",
                    "title": "Titel (deutsch)",
                    "desc": "",
                    "required": true
                },
                {
                    "name": "title_fr",
                    "type": "TextLine",
                    "title": "Titel (franz\u00f6sisch)",
                    "desc": "",
                    "required": true
                }
            ]
        },
        {
            "name": "opengever.base.behaviors.creator.ICreator",
            "fields": [
                {
                    "name": "creators",
                    "type": "Tuple",
                    "title": "Autoren",
                    "desc": "",
                    "required": false,
                    "omitted": {
                        "zope.interface.Interface": true
                    }
                }
            ]
        },
        {
            "name": "opengever.base.behaviors.lifecycle.ILifeCycle",
            "fields": [
                {
                    "name": "retention_period",
                    "type": "Choice",
                    "title": "Aufbewahrungsdauer (Jahre)",
                    "desc": "Zeitraum zwischen dem j\u00fcngsten Dokumentdatum eines in einem Dossier enthaltenen Dokuments und dem Zeitpunkt, an dem dieses f\u00fcr die Gesch\u00e4ftst\u00e4tigkeit der Verwaltungseinheit nicht mehr ben\u00f6tigt wird",
                    "required": true,
                    "default": 5,
                    "vocabulary": [
                        5,
                        10,
                        15,
                        20,
                        25
                    ]
                },
                {
                    "name": "retention_period_annotation",
                    "type": "Text",
                    "title": "Kommentar zur Aufbewahrungsdauer",
                    "desc": "",
                    "required": false
                },
                {
                    "name": "archival_value",
                    "type": "Choice",
                    "title": "Archivw\u00fcrdigkeit",
                    "desc": "Archivw\u00fcrdigkeit",
                    "required": true,
                    "default": "unchecked",
                    "vocabulary": [
                        "unchecked",
                        "prompt",
                        "archival worthy",
                        "not archival worthy",
                        "archival worthy with sampling"
                    ]
                },
                {
                    "name": "archival_value_annotation",
                    "type": "Text",
                    "title": "Kommentar zur Archivw\u00fcrdigkeit",
                    "desc": "",
                    "required": false
                },
                {
                    "name": "custody_period",
                    "type": "Choice",
                    "title": "Archivische Schutzfrist (Jahre)",
                    "desc": "Dauer, w\u00e4hrend der nach der Archivierung die Dokumente vor \u00f6ffentlicher Einsichtnahme gesch\u00fctzt sind",
                    "required": true,
                    "default": 30,
                    "vocabulary": [
                        0,
                        30,
                        100,
                        150
                    ]
                },
                {
                    "name": "date_of_cassation",
                    "type": "Date",
                    "title": "Kassationsdatum",
                    "desc": "",
                    "required": false
                },
                {
                    "name": "date_of_submission",
                    "type": "Date",
                    "title": "Anbietezeitpunkt",
                    "desc": "",
                    "required": false
                }
            ],
            "fieldsets": {
                "fieldset_lifecycle": [
                    "retention_period",
                    "retention_period_annotation",
                    "archival_value",
                    "archival_value_annotation",
                    "custody_period",
                    "date_of_cassation",
                    "date_of_submission"
                ]
            }
        },
        {
            "name": "opengever.repository.behaviors.referenceprefix.IReferenceNumberPrefix",
            "fields": [
                {
                    "name": "reference_number_prefix",
                    "type": "TextLine",
                    "title": "Pr\u00e4fix des Aktenzeichens",
                    "desc": "",
                    "required": false,
                    "default": "<H\u00f6chste auf dieser Ebene vergebene Nummer + 1>"
                }
            ],
            "fieldsets": {
                "fieldset_common": [
                    "reference_number_prefix"
                ]
            }
        }
    ]
}