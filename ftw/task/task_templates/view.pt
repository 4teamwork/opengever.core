<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ftw.task">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

    <div tal:replace="structure provider:plone.abovecontenttitle" />

    <h1 class="documentFirstHeading" tal:content="python: context.title"/> 

    <div tal:replace="structure provider:plone.belowcontenttitle" />

    <p class="documentDescription" tal:content="context/Description" />

    <div tal:replace="structure provider:plone.abovecontentbody" />

    <div class="field" tal:repeat="widget view/widgets/values">
        <tal:block condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description','responsible')">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure widget/render" />
        </tal:block>
        <tal:block condition="python:widget.__name__  == 'responsible'">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure python: len(widget.value) > 0 and widget.value[0] or '' " />
        </tal:block>
    </div>
    
    <fieldset tal:repeat="group view/groups">
        <legend tal:content="group/label" />
        <div class="field" tal:repeat="widget group/widgets/values">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure widget/render" />
        </div>
    </fieldset>
    
    <div class>
        <a class="standalone" href="addresponse" i18n:translate="add_response">add Response</a>
    </div>
    <div class="visualClear"><!----></div>
        <div><h2 i18n:translate="subtasks">Subtasks:</h2></div>
        <tal:items define="items view/getSubTasks">
            <ul tal:condition="items">
                <li tal:repeat="item items">
                    <img tal:attributes="src item/getIcon" />
                    <a href="" tal:attributes="href item/getURL|nothing" tal:omit-tag="not: item/getURL|nothing"><span tal:content="item/Title" /></a>
                </li>
            </ul>
            <span tal:condition="not: items" i18n:translate="no_content">No Content</span>
        </tal:items>
        
        <div class="visualClear"><!----></div>
        <div><h2 i18n:translate="responses">Responses:</h2></div>
        <div tal:replace="structure provider:ftw.task.beneathTask" />
        <div class="visualClear"><!----></div>
        <div tal:replace="structure provider:plone.belowcontentbody" />
    <div class="visualClear"><!----></div>
    </tal:main-macro>
</metal:main>

</body>
</html>

