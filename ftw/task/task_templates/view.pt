<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ftw.task">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

    <div tal:replace="structure provider:plone.abovecontenttitle" />

    <h1 class="documentFirstHeading" tal:content="python: '#' + str(context.sequence_number) + ' ' + context.title"/> 

    <div tal:replace="structure provider:plone.belowcontenttitle" />

    <p class="documentDescription" tal:content="context/Description" />

    <div tal:replace="structure provider:plone.abovecontentbody" />

    <div class="field" tal:repeat="widget view/widgets/values">
        <tal:block condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description','responsible')">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure widget/render" />
        </tal:block>
        <tal:block condition="python:widget.__name__  == 'responsible' ">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure python: widget.value[0]" />
        </tal:block>
    </div>
    
    <fieldset tal:repeat="group view/groups">
        <legend tal:content="group/label" />
        <div class="field" tal:repeat="widget group/widgets/values">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure widget/render" />
        </div>
    </fieldset>
    
        <div><h2>Subtasks:</h2></div>
        <tal:items define="items view/getSubTasks">
            <ul tal:condition="items">
                <li tal:repeat="item items">
                    <img tal:attributes="src item/getIcon" />
                    <a href="" tal:attributes="href item/getURL|nothing" tal:omit-tag="not: item/getURL|nothing"><span tal:content="item/Title" /></a>
                </li>
            </ul>
            <span tal:condition="not: items" i18n:translate="no_content">No Content</span>
        </tal:items>
    
        <div><h2>Responses:</h2></div>
        <tal:items define="items view/getResponses">
            <tal:cond tal:condition="items">
                <div class="response-clarification" tal:repeat="item items">
                    <!-- Response Info -->
                    <div class="response-info">
                      <span i18n:translate="task_added_by">Added by</span>
                      <span class="contact-user"
                            tal:content="python:item.getOwner()" />
                      <span i18n:translate="poi_added_on">on</span>
                      <span class="contact-user"
                            tal:content="python:item.creation_date.strftime('%d.%m.%Y %H:%M')"/>
                    </div>            
                    <span i18n:translate="change">Changes:</span>
                    <tal:cond tal:repeat="change python: item.changes">
                        <span i18n:translate="" tal:content="python: change[0]"></span>
                        <span>: </span>
                        <span i18n:translate="" tal:content="python: change[1]"></span>
                        <span> --> </span>
                        <span i18n:translate="" tal:content="python: change[2]"></span>
                    </tal:cond>
                    <div tal:content="item/text"></div>
                    <div class="response-actions">
                        <a class="context" tal:attributes="href python: item.absolute_url() +'/edit'" href="">Edit</a>
                        <a class="standalone" tal:attributes="href python: item.absolute_url() + '/delete_confirmation'" href="">Delete</a>
                    </div>
                </div>
            </tal:cond>
            <div><span tal:condition="not: items" i18n:translate="no_response">No Responses</span></div>
        </tal:items>

        <div class="responseForm" tal:content="structure view/getResponseForm">dsfas</div>
        <div class="visualClear"><!----></div>
        <!-- ><div tal:replace="structure provider:task.response.add" /> -->

        <div class="visualClear"><!----></div>

        <div tal:replace="structure provider:plone.belowcontentbody" />
        
        
    </tal:main-macro>
</metal:main>

</body>
</html>

