<?xml version="1.0"?>
<object name="ftw.task.task_overview" meta_type="Dexterity FTI"
   i18n:domain="ftw.task" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 
 <!-- Basic metadata -->
 <property name="title" i18n:translate="">Task Overview</property>
 <property name="description" i18n:translate="">Task Overview</property>
 <property name="content_icon">document_icon.gif</property>
 <property name="allow_discussion">False</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
 </property>


 <!-- schema interface -->
 <property name="schema">ftw.task.task_overview.ITaskOverview</property> 
 
 <!-- class used for content items -->
 <property name="klass">ftw.task.task_overview.TaskOverview</property>
 
 <!-- add permission -->
 <property name="add_permission">cmf.AddPortalContent</property>
 
 <!-- enabled behaviors -->
 <property name="behaviors">
     <element value="plone.app.content.interfaces.INameFromTitle" /> 
     <element value="opengever.tabbedview.interfaces.ITabbedViewEnabled" />
     <element value="plone.app.dexterity.behaviors.related.IRelatedItems" />
     <element value="ftw.task.behaviors.ITransition" />
     <element value="opengever.trash.trash.ITrashable" />
 </property>
 
 <!-- View information -->
 <property name="default_view">tabbed_view</property>
 <property name="default_view_fallback">False</property>
 <property name="view_methods">
  <element value="tabbed_view"/>

 </property>
 
 <!-- Actions -->
 <action title="mytasks" action_id="mytasks" category="arbeitsraum-tabs"
		condition_expr="" url_expr="string:#" visible="True">
 	<permission value="View"/>
 </action>
 <action title="revtasks" action_id="revtasks" category="arbeitsraum-tabs"
		condition_expr="" url_expr="string:#" visible="True">
 	<permission value="View"/>
 </action>
</object>