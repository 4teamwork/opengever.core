<?xml version="1.0"?>
<dc-workflow workflow_id="task_workflow"
             title="Dossier Workflow [ftw]" description=""
             state_variable="review_state"
             initial_state="task-state-new">
 <permission>Access contents information</permission>
 <permission>Add portal content</permission>
 <permission>List folder contents</permission>
 <permission>Modify portal content</permission>
 <permission>View</permission>
 <state state_id="task-state-acknowledged" title="">
 </state>
 <state state_id="task-state-active"
        title="task-state-active">
  <exit-transition transition_id="task-transition-deactivate"/>
  <exit-transition transition_id="task-transition-resolve"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
  </permission-map>
 </state>
 <state state_id="task-state-completed" title="">
  <exit-transition transition_id="task-transition-reactivate"/>
 </state>
 <state state_id="task-state-inactive"
        title="task-state-inactive">
  <exit-transition transition_id="task-transition-activate"/>
  <exit-transition transition_id="task-transition-resolve"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>User</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>User</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>User</permission-role>
  </permission-map>
 </state>
 <state state_id="task-state-new" title="task-state-new">
  <exit-transition transition_id="task-transition-to_acknowledge"/>
  <exit-transition transition_id="task-transition-to_complete"/>
 </state>
 <state state_id="task-state-rejected"
        title="task-state-Rejected">
  <exit-transition transition_id="task-transition-reactivate"/>
 </state>
 <state state_id="task-state-resolved"
        title="task-state-resolved">
  <exit-transition transition_id="task-transition-reactivate"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>User</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>User</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>User</permission-role>
  </permission-map>
 </state>
 <state state_id="task-state-to_acknowledge" title="">
  <exit-transition transition_id="task-transition-do_acknowledge"/>
  <exit-transition transition_id="task-transition-reject"/>
  <exit-transition transition_id="task-transition-transfer"/>
 </state>
 <state state_id="task-state-to_complete" title="">
  <exit-transition transition_id="task-transition-do_complete"/>
  <exit-transition transition_id="task-transition-reject"/>
  <exit-transition transition_id="task-transition-transfer"/>
 </state>
 <transition transition_id="task-transition-activate"
             title="task-transition-activate"
             new_state="task-state-active" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-activate"
          category="workflow">task-transition-activate</action>
  <guard>
   <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <transition transition_id="task-transition-deactivate"
             title="task-transition-deactivate"
             new_state="task-state-inactive" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-deactivate"
          category="workflow">task-transition-deactivate</action>
  <guard>
   <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <transition transition_id="task-transition-do_acknowledge"
             title="task-transition-do_acknowledge"
             new_state="task-state-acknowledged"
             trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-do_acknowledge"
          category="workflow">task-transitiondo_acknowledge</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="task-transition-do_complete"
             title="task-transition-do_complete"
             new_state="task-state-completed" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-do_complete"
          category="workflow">task-transition-do_complete</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="task-transition-reactivate"
             title="task-transition-reactivate"
             new_state="task-state-new" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-reactivate"
          category="workflow">task-transition-reactivate</action>
  <guard>
   <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <transition transition_id="task-transition-reject"
             title="task-transition-reject"
             new_state="task-state-rejected" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-reject"
          category="workflow">task-transition-reject</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="task-transition-resolve"
             title="task-transition-resolve"
             new_state="task-state-resolved" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-resolve"
          category="workflow">task-transition-resolve</action>
  <guard>
   <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <transition transition_id="task-transition-to_acknowledge"
             title="task-transition-to_acknowledge"
             new_state="task-state-to_acknowledge"
             trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-to_acknowledge"
          category="workflow">task-transition-to_acknowledge</action>
  <guard>
   <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <transition transition_id="task-transition-to_complete"
             title="task-transition-to_complete"
             new_state="task-state-to_complete"
             trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-to_complete"
          category="workflow">task-transition-to_complete</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="task-transition-transfer"
             title="task-transition-transfer" new_state=""
             trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=task-transition-to_complete"
          category="workflow">task-transition-transfer</action>
  <guard>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" title="">
  <description>Reviewer tasks</description>
  <action url="%(portal_url)s/search?review_state=pending"
          category="global">Pending (%(count)d)</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="pending"/>
 </worklist>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>View</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
