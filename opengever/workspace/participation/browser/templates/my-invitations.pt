<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="opengever.workspace">

  <body>

    <metal:title fill-slot="content-title">
       <h1 class="documentFirstHeading">
            My invitations
       </h1>
    </metal:title>

    <div metal:fill-slot="content-core">
      <metal:core-macro define-macro="content-core">

        <table class="listing">
            <thead>
                <tr>
                    <th>Invited by</th>
                    <th>Workspace</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="invitation view/get_invitations">
                    <td tal:content="invitation/inviter" />
                    <td tal:content="invitation/target_title" />
                    <td>
                        <a tal:attributes="href string:${context/absolute_url}/my-invitations/accept" i18n:translate="">
                            Accept
                        </a>
                        <a tal:attributes="href string:${context/absolute_url}/my-invitations/decline" i18n:translate="">
                            Decline
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>

      </metal:core-macro>
    </div>
  </body>
</html>
