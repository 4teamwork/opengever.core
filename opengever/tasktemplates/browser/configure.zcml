    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="opengever.tasktemplates">

    <browser:page
        for="opengever.dossier.behaviors.dossier.IDossierMarker"
        name="add-tasktemplate"
        class=".form.AddForm"
