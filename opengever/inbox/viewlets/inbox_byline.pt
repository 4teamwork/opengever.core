<div class="documentByLine"
	   id="plone-document-byline"
     i18n:domain="opengever.dossier"
     tal:condition="view/show">


  <ul>
    <li>
      <span class="" tal:attributes="class string:byline-icon ${view/get_css_class}" />
    </li>

    <li tal:define="lock_icon view/locked_icon" tal:condition="lock_icon" >
      <span id="lock-icon" class="function-lock"/>
    </li>
    <li class="emailAddress" tal:condition="view/email">
      <span class="label" i18n:translate="label_email_address" i18n:domain="opengever.dossier">
        E-Mail:
      </span>
      <a href="#" tal:content="view/email" tal:attributes="href string:mailto:${view/email}"/>
    </li>

  </ul>
</div>
