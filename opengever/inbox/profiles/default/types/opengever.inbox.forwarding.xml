<?xml version="1.0"?>
<object name="opengever.inbox.forwarding" meta_type="Dexterity FTI"
        i18n:domain="opengever.inbox" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <!-- Basic metadata -->
    <property name="title" i18n:translate="">Forwarding</property>
    <property name="description" i18n:translate=""></property>
    <property name="content_icon">icon_objekt_eingangskorb.gif</property>

    <property name="allow_discussion">False</property>
    <property name="global_allow">True</property>
    <property name="filter_content_types">True</property>
    <property name="allowed_content_types">
        <element value="opengever.document.document" />
        <element value="ftw.mail.mail" />
    </property>


    <!-- schema interface -->
    <property name="schema">opengever.inbox.forwarding.IForwarding</property>

    <!-- class used for content items -->
    <property name="klass">opengever.inbox.forwarding.Forwarding</property>

    <!-- add permission -->
    <property name="add_permission">opengever.inbox.AddForwarding</property>

    <!-- enabled behaviors -->
    <property name="behaviors">
        <element value="collective.dexteritytextindexer.behavior.IDexterityTextIndexer" />
        <element value="opengever.tabbedview.interfaces.ITabbedViewEnabled" />
        <element value="opengever.trash.trash.ITrashable" />
        <element value="opengever.inbox.behaviors.forwardingnamefromtitle.IForwardingNameFromTitle" />
        <element value="opengever.base.behaviors.sequence.ISequenceNumberBehavior" />
        <element value="plone.app.lockingbehavior.behaviors.ILocking" />
    </property>

    <!-- View information -->
    <property name="default_view">view</property>
    <property name="immediate_view">../#given_tasks</property>
    <property name="default_view_fallback">False</property>
    <property name="view_methods">
        <element value="view"/>
    </property>

    <!-- Method aliases -->
    <alias from="(Default)" to="(selected layout)"/>
    <alias from="edit" to="@@edit"/>
    <alias from="sharing" to="@@sharing"/>
    <alias from="view" to="@@view"/>

    <!-- Actions -->
    <action action_id="view"
            visible="False"
            title="View"
            category="object"
            url_expr="string:${object_url}"
            condition_expr="">
        <permission value="View"/>
    </action>

    <action action_id="edit"
            visible="True"
            title="Edit"
            category="object"
            url_expr="string:${object_url}/edit"
            condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True">
        <permission value="Modify portal content"/>
    </action>

    <action action_id="addresponse"
            visible="True"
            title="Add response"
            category="folder_factories"
            url_expr="string:${object_url}/addresponse"
            icon_expr="string:${object_url}/icon_objekt_bemerkung.gif"
            condition_expr="">
        <permission value="Add portal content"/>
    </action>

    <action action_id="assign_task"
            visible="True"
            title="Assign task"
            category="object_buttons"
            url_expr="string:${object_url}/@@assign-task"
            icon_expr=""
            condition_expr="">
        <permission value="Modify portal content"/>
    </action>

</object>
