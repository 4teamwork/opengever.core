 <transition transition_id="forwarding-transition-accept" title="forwarding-transition-accept" new_state="forwarding-state-closed" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/@@forwarding_transition_controller?transition=forwarding-transition-accept" category="workflow" icon="">forwarding-transition-accept</action>
  <guard>
   <guard-expression>python: here.restrictedTraverse('@@forwarding_transition_controller').is_transition_possible('forwarding-transition-accept')</guard-expression>
  </guard>
 </transition>
