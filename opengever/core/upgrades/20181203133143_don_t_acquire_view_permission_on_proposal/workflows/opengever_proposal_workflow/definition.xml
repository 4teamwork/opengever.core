<dc-workflow
    workflow_id="opengever_proposal_workflow"
    title="Proposal Workflow"
    description=""
    state_variable="review_state"
    initial_state="proposal-state-active"
    manager_bypass="False">

  <permission>opengever.document: Add document</permission>
  <permission>Modify portal content</permission>
  <permission>opengever.document: Cancel</permission>
  <permission>opengever.document: Checkin</permission>
  <permission>opengever.document: Checkout</permission>
  <permission>opengever.document: Force Checkin</permission>
  <permission>opengever.trash: Trash content</permission>
  <permission>View</permission>
  <permission>Access contents information</permission>

  <state
      state_id="proposal-state-active"
      title="proposal-state-active">
    <exit-transition transition_id="proposal-transition-submit" />

    <permission-map
        acquired="False"
        name="Access contents information">
      <permission-role>Administrator</permission-role>
      <permission-role>Editor</permission-role>
      <permission-role>Manager</permission-role>
      <permission-role>Reader</permission-role>
    </permission-map>

    <permission-map
        acquired="True"
        name="Modify portal content"
        />
    <permission-map
        acquired="False"
        name="View">
      <permission-role>Administrator</permission-role>
      <permission-role>Editor</permission-role>
      <permission-role>Manager</permission-role>
      <permission-role>Reader</permission-role>
    </permission-map>

    <!-- Never allow the user to add documents; they are added by the system -->
    <permission-map
        acquired="False"
        name="opengever.document: Add document"
        />
    <!-- Allow documents to be edited as configured in the dossier workflow by acquiring the settings. -->
    <permission-map
        acquired="True"
        name="Modify portal content"
        />
    <permission-map
        acquired="True"
        name="opengever.document: Cancel"
        />
    <permission-map
        acquired="True"
        name="opengever.document: Checkin"
        />
    <permission-map
        acquired="True"
        name="opengever.document: Checkout"
        />
    <permission-map
        acquired="True"
        name="opengever.document: Force Checkin"
        />
    <!-- Never allow proposal documents to be trashed -->
    <permission-map
        acquired="False"
        name="opengever.trash: Trash content"
        />
    <permission-map
        acquired="False"
        name="opengever.trash: Untrash content"
        />
  </state>

  <state
      state_id="proposal-state-submitted"
      title="proposal-state-submitted">
    <exit-transition transition_id="proposal-transition-reject" />

    <permission-map
        acquired="False"
        name="Access contents information">
      <permission-role>Administrator</permission-role>
      <permission-role>Editor</permission-role>
      <permission-role>Manager</permission-role>
      <permission-role>Reader</permission-role>
    </permission-map>

    <permission-map
        acquired="True"
        name="Modify portal content"
        />
    <permission-map
        acquired="False"
        name="View">
      <permission-role>Administrator</permission-role>
      <permission-role>Editor</permission-role>
      <permission-role>Manager</permission-role>
      <permission-role>Reader</permission-role>
    </permission-map>

    <!-- Never allow the user to add documents; they are added by the system. -->
    <permission-map
        acquired="False"
        name="opengever.document: Add document"
        />
    <!-- Disallow to edit the contained proposal documents since they are submitted as a copy. -->
    <permission-map
        acquired="False"
        name="Modify portal content"
        />
    <permission-map
        acquired="False"
        name="opengever.document: Cancel"
        />
    <permission-map
        acquired="False"
        name="opengever.document: Checkin"
        />
    <permission-map
        acquired="False"
        name="opengever.document: Checkout"
        />
    <permission-map
        acquired="False"
        name="opengever.document: Force Checkin"
        />
    <!-- Never allow proposal documents to be trashed -->
    <permission-map
        acquired="False"
        name="opengever.trash: Trash content"
        />
    <permission-map
        acquired="False"
        name="opengever.trash: Untrash content"
        />
  </state>

  <transition
      transition_id="proposal-transition-submit"
      title="proposal-transition-submit"
      new_state="proposal-state-submitted"
      trigger="USER"
      before_script=""
      after_script="">
    <guard>
    </guard>
  </transition>

  <transition
      transition_id="proposal-transition-reject"
      title="proposal-transition-reject"
      new_state="proposal-state-active"
      trigger="USER"
      before_script=""
      after_script="">
    <guard>
    </guard>
  </transition>

  <variable
      variable_id="action"
      for_catalog="False"
      for_status="True"
      update_always="True">
    <description>Previous transition</description>
    <default>
      <expression>transition/getId|nothing</expression>
    </default>
    <guard>
  </guard>
  </variable>

  <variable
      variable_id="actor"
      for_catalog="False"
      for_status="True"
      update_always="True">
    <description>The ID of the user who performed the previous transition</description>
    <default>
      <expression>user/getUserName</expression>
    </default>
    <guard>
  </guard>
  </variable>

  <variable
      variable_id="comments"
      for_catalog="False"
      for_status="True"
      update_always="True">
    <description>Comment about the last transition</description>
    <default>
      <expression>python:state_change.kwargs.get('comment', '')</expression>
    </default>
    <guard>
  </guard>
  </variable>

  <variable
      variable_id="review_history"
      for_catalog="False"
      for_status="False"
      update_always="False">
    <description>Provides access to workflow history</description>
    <default>
      <expression>state_change/getHistory</expression>
    </default>
    <guard>
      <guard-permission>Request review</guard-permission>
      <guard-permission>Review portal content</guard-permission>
    </guard>
  </variable>

  <variable
      variable_id="time"
      for_catalog="False"
      for_status="True"
      update_always="True">
    <description>When the previous transition was performed</description>
    <default>
      <expression>state_change/getDateTime</expression>
    </default>
    <guard>
  </guard>
  </variable>
</dc-workflow>
