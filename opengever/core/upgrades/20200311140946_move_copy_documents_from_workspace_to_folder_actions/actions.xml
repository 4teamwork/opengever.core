    <object name="copy_documents_from_workspace" meta_type="CMF Action" i18n:domain="opengever.core" remove="True"/>

  </object>

  <!-- FOLDER ACTIONS used to list available actions through the actions endpoint-->
  <object name="folder_actions" meta_type="CMF Action Category">

    <object name="copy_documents_from_workspace" meta_type="CMF Action" i18n:domain="opengever.core">
      <property name="title" i18n:translate="">Copy documents from workspace</property>
      <property name="description">Gever-UI action</property>
      <property name="url_expr" />
      <property name="icon_expr" />
      <property name="available_expr">object/@@folder_buttons_availability/is_copy_documents_from_workspace_available</property>
      <property name="visible">True</property>
    </object>

  </object>

</object>
