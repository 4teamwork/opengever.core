<object xmlns:i18n="http://xml.zope.org/namespaces/i18n" name="opengever.meeting.committee" meta_type="Dexterity FTI" i18n:domain="opengever.core">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">Committee</property>
  <property name="description" i18n:translate="" />
  <property name="icon_expr" />
  <property name="allow_discussion">False</property>
  <property name="global_allow">True</property>
  <property name="allowed_content_types">
    <element value="opengever.meeting.submittedproposal" />
    <element value="opengever.meeting.period" />
  </property>

  <!-- Schema interface -->
  <property name="schema">opengever.meeting.committee.ICommittee</property>

  <!-- Class used for content items -->
  <property name="klass">opengever.meeting.committee.Committee</property>

  <!-- Add permission -->
  <property name="add_permission">opengever.meeting.AddCommittee</property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="False">
    <element value="opengever.base.behaviors.changed.IChanged" />
    <element value="opengever.meeting.behaviors.namefromtitle.ICommitteeNameFromTitle" />
    <element value="opengever.base.behaviors.sequence.ISequenceNumberBehavior" />
    <element value="plone.app.lockingbehavior.behaviors.ILocking" />
  </property>

  <!-- View information -->
  <property name="default_view">tabbed_view</property>
  <property name="immediate_view">tabbed_view</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
    <element value="view" />
    <element value="tabbed_view" />
  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="(selected layout)" />
  <alias from="edit" to="@@edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="@@view" />

  <!-- Actions -->
  <action
      action_id="view"
      visible="False"
      title="View"
      category="object"
      url_expr="string:${object_url}"
      condition_expr="">
    <permission value="View" />
  </action>

  <action
      action_id="edit"
      visible="True"
      title="Edit"
      category="object"
      url_expr="string:${object_url}/edit"
      condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True">
    <permission value="Modify portal content" />
  </action>

  <action
      action_id="add-meeting"
      visible="True"
      title="Meeting"
      category="folder_factories"
      url_expr="string:${object_url}/add-meeting"
      icon_expr=""
      condition_expr="context/is_active">
    <permission value="Add portal content" />
  </action>

  <action
      action_id="add-membership"
      visible="True"
      title="Membership"
      category="folder_factories"
      url_expr="string:${object_url}/add-membership"
      icon_expr=""
      condition_expr="context/is_active">
    <permission value="Add portal content" />
  </action>

  <action
      action_id="close-period"
      visible="True"
      title="Close current period"
      url_expr="string:${object_url}/@@close-period"
      condition_expr="object/@@close-period/available"
      category="object_buttons">
    <permission value="Modify portal content" />
  </action>

</object>
