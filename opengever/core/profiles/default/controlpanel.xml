<object xmlns:i18n="http://xml.zope.org/namespaces/i18n" name="portal_controlpanel">

  <!-- LDAP SYNCHRONISATION CONTROL PANEL -->
  <configlet
      title="LDAP Synchronisation Control Panel"
      action_id="ldap_controlpanel"
      appId="opengever.ogds.base"
      category="Products"
      url_expr="string:${portal_url}/@@ldap_controlpanel"
      condition_expr=""
      icon_expr="string:$portal_url/++resource++plone.app.registry/icon.png"
      visible="True">
    <permission>Manage portal</permission>
  </configlet>

  <!-- OGDS CONTROL PANEL -->
  <configlet
      title="OGDS Control Panel"
      action_id="ogds-controlpanel"
      appId="opengever.tabbedview"
      category="Products"
      url_expr="string:${portal_url}/@@ogds-controlpanel"
      condition_expr=""
      icon_expr="string:$portal_url/++resource++plone.app.registry/icon.png"
      visible="True">
    <permission>Manage portal</permission>
  </configlet>

  <!-- PLONETHEME TEAMRAUM CONTROL PANEL -->
  <configlet
      i18n:domain="plonetheme.teamraum"
      title="Teamraum theme"
      action_id="plonetheme.teamraum"
      appId="plonetheme.teamraum"
      category="Products"
      condition_expr=""
      url_expr="string:${portal_url}/@@teamraumtheme-controlpanel"
      icon_expr="string:${portal_url}/++resource++teamraumtheme_icon.png"
      visible="True"
      i18n:attributes="title">
    <permission>Manage portal</permission>
  </configlet>

</object>
