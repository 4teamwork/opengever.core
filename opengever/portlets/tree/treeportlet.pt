<dl class="portlet portletTreePortlet"
    i18n:domain="opengever.portlets.tree">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <tal:b content="view/header" />
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        <ul id="tree" class="filetree">
            <div tal:content="structure python: here.unrestrictedTraverse('tree').render()" /> 
        </ul>
        <script type="text/javascript">
            jq(function() {
            	var tree = jq("#tree").treeview({
            		collapsed: true,
            		animated: "fast",
            		persist: "cookie",
            		cookieId: "opengever-treeview"
            	});

            });
        </script>
    </dd>

    <!--<dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd> -->

</dl>
