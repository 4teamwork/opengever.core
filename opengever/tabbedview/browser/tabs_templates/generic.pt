<tal:translation i18n:domain="opengever.tabbedview">
  <form name="tabbedview_form"
        method="post"
        action="folder_object"
        tal:attributes="action context/absolute_url"
        >

    <input type="hidden" name="orig_template" tal:attributes="value string:${context/absolute_url}/#${view/view_name}" />

    <tal:cond tal:condition="view/contents">
        <div class="tabbedview_select">
          <span i18n:translate="">Choose:</span> <a href="javascript:tabbedview.select_all()" i18n:translate="">all</a>, <a href="javascript:tabbedview.select_none()" i18n:translate="">none</a>
          <span class="select_folder" style="display:none" i18n:translate=""> All visible entries chosen <a href="#" i18n:translate="">Show all in this Folder</a></span>
          <!--<div tal:replace="structure view/batching" />-->
        </div>
        
        <div id="batching_container" class="ftwtable">
            <!--iefix-->
        </div>

        <div id="listing_container" class="ftwtable"><!--iefix--></div>
        <!--<div tal:content="structure view/render_listing" />-->
    </tal:cond>

    <p tal:condition="not: view/contents" i18n:translate="label_no_contents">
        No contents
    </p>

    <div id="tabbedview-menu" class="tabbedview-action-menu contentActions">
        <ul class="tabbedview-action-list">
            <tal:major_buttons tal:repeat="button view/major_buttons">
                <li>
                    <a class="actionicon" href="#" tal:attributes="href button/url;" tal:content="button/title" />
                </li>
            </tal:major_buttons>
            <li tal:condition="view/minor_buttons">
                <dl id="plone-contentmenu-tabbedview-actions" class="actionMenu deactivated">
                  <dt class="actionMenuHeader label-">
                    <a href="">
                      <span i18n:translate="button_more_actions"
                        class="arrowDownAlternative">More actions &#9660;</span>
                    </a>
                  </dt>
                  <dd class="actionMenuContent">
                      <ul>
                          <tal:minor_buttons tal:repeat="button view/minor_buttons">
                              <li>
                                  <a class="actionicon" href="#" tal:attributes="href button/url;" tal:content="button/title" />
                              </li>
                          </tal:minor_buttons>
                      </ul>
                  </dd>
                </dl>
            </li>
        </ul>
    </div>

  </form>

</tal:translation>
