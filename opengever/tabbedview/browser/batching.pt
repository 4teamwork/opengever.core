<!-- Batch Navigation -->
<div class="listingBar"
     metal:define-macro="navigation"
     tal:define="request request|context/request|container/request|nothing;
                 batch view/batch|nothing;
                 batchformkeys batchformkeys|nothing;
                 batchlinkparams python:batchformkeys and dict([(key, request.form[key]) for key in batchformkeys if key in request]) or request.form;
                 mq python:modules['ZTUtils'].make_query;
                 url batch_base_url | request/ACTUAL_URL;
                 currentpage batch/pagenumber;"
     tal:condition="view/multiple_pages">

    <!-- Link to first -->
    <span class="first">
        <a href=""
           tal:attributes="href string:${view/url}?pagenumber=1&amp;sort_on=${request/sort_on|string:getObjPositionInParent}">&laquo;</a>
    </span>

    <!-- Link to previous -->
    <span class="previous"
      tal:define="p batch/has_previous | nothing">
        <a href=""
           tal:condition="p"
           tal:attributes="href string:${view/url}?pagenumber=${batch/previouspage}&amp;sort_on=${request/sort_on|string:getObjPositionInParent}">
           &lsaquo;
        </a>
        <a name="previous" tal:condition="not:p">&lsaquo;</a>
    </span>

    <!-- Pagelist with links to previous pages for quick navigation -->
    <span tal:repeat="pagenumber batch/previous_pages">
      <a href="" tal:content="pagenumber" 
         tal:attributes="href string:${view/url}?pagenumber=$pagenumber&amp;sort_on=${request/sort_on|string:getObjPositionInParent}"/>
    </span>

    <!-- Current page -->
    <span tal:condition="batch/navlist" class="current"
           tal:content="batch/pagenumber">Current page number</span>

    <!-- Pagelist with links to next pages for quick navigation -->
    <span tal:repeat="pagenumber batch/next_pages">
      <a href="" tal:content="pagenumber" 
         tal:attributes="href string:${view/url}?pagenumber=$pagenumber&amp;sort_on=${request/sort_on|string:getObjPositionInParent}"/>
    </span>

    <!-- Link to next -->
    <span class="next"
      tal:define="n batch/has_next | nothing">
        <a href=""
           tal:condition="n"
           tal:attributes="href string:${view/url}?pagenumber=${batch/nextpage}&amp;sort_on=${request/sort_on|string:getObjPositionInParent}">
           &rsaquo;
        </a>
        <a name="next" tal:condition="not:n">&rsaquo;</a>
    </span>

    <!-- Link to last -->
    <span class="last">
        <a href=""
           tal:attributes="href string:${view/url}?pagenumber=${batch/lastpage}&amp;sort_on=${request/sort_on|string:getObjPositionInParent}">
           &raquo;</a>
    </span>

</div>