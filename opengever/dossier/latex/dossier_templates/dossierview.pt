<table tal:repeat="group view/groups" width="80%" border="1">
	<tr>
		<th colspan="2"><strong tal:content="group/label"/></th>
	</tr>
	<tr tal:repeat="field group/fields/items">
		<td width="35%" tal:content="python:view.w[field[0]].label"/>
		<td width="45%" tal:content="structure python:view.w[field[0]].render()"
		 	tal:condition="python: field[0] != 'IDossier.responsible'"/>
		<td width="45%" tal:content="view/responsible"
		 	tal:condition="python: field[0] == 'IDossier.responsible'"></td>
	</tr>
</table>


