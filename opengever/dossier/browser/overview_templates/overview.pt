<!--TODO: refactor using viewlets-->
<tal:block i18n:domain="opengever.dossier" tal:define="groups view/boxes">
  <div tal:repeat="boxes groups" tal:attributes="class string:boxGroup${repeat/boxes/index}">
    <div tal:repeat="box boxes" class="box" tal:attributes="id string:${box/id}Box">
      <h2 i18n:translate="" tal:content="box/id"></h2>
      <tal:items define="items box/content">
        <ul tal:condition="items">
          <li tal:repeat="item items">
            <img tal:attributes="src item/getIcon"
                 tal:condition="item/getIcon" />
            <a href="" class="rollover-breadcrumb" tal:attributes="href item/getURL|nothing; title item/alt|nothing" tal:omit-tag="not: item/getURL|nothing"><span tal:content="item/Title" /></a>
          </li>
          <li class="moreLink">
            <a tal:attributes="href string:#${box/id}-tab" i18n:translate="">show all</a>
          </li>
        </ul>
        <span tal:condition="not: items" i18n:translate="no_content" />
      </tal:items>
    </div>
  </div>
</tal:block>
