<div class="documentByLine"
     id="plone-document-byline"
     i18n:domain="opengever.dossier"
     tal:condition="viewlet/show">

  <span id="lock-icon"
        tal:define="lock_icon viewlet/locked_icon"
        tal:condition="lock_icon">
    <img tal:replace="structure lock_icon" />
  </span>

  <tal:name tal:condition="context/responsible">
    <span class="documentAuthor"
          i18n:domain="opengever.dossier"
          i18n:translate="label_by_author">
      by
      <tal:responsible
         i18n:name="author"
         i18n:domain="opengever.dossier"
         >
        <tal:link replace="structure viewlet/responsible" />
      </tal:responsible>

    </span>
  </tal:name>

  <tal:state>
    <span i18n:translate="label_workflow_state" class="documentStatus">
      State:
    </span>
    <span tal:content="viewlet/workflow_state" i18n:translate="" i18n:domain="plone" class="documentAuthor" />
  </tal:state>

  <span class="documentModified">
    <span i18n:translate="label_start_byline" tal:omit-tag="">
      from:
    </span>
    <span tal:replace="python:viewlet.toLocalizedTime(str(viewlet.start()),long_format=0)">
      August 16, 2001 at 23:35:59
    </span>
  </span>

  <span class="documentModified" tal:condition="python:viewlet.end()">
    <span i18n:translate="label_end_byline" i18n:domain="opengever.dossier" tal:omit-tag="">
      to:
    </span>
    <span tal:replace="python:viewlet.toLocalizedTime(str(viewlet.end()),long_format=0)">
      August 16, 2001 at 23:35:59
    </span>
  </span>

  <tal:expired tal:condition="viewlet/isExpired">
    <span class="state-expired"
          i18n:translate="time_expired" tal:omit-tag="">expired</span>
  </tal:expired>

  <span class="sequenceNumber" tal:condition="viewlet/sequence_number">
    <span i18n:translate="label_sequence_number"
          i18n:domain="opengever.dossier" tal:omit-tag="">
      Sequence Number:
    </span>
    <span tal:replace="viewlet/sequence_number">
      14
    </span>
  </span>

  <span class="referenceNumber" tal:condition="viewlet/reference_number">
    <span i18n:translate="label_reference_number"
          tal:omit-tag="">
      Reference Number:
    </span>
    <span tal:replace="viewlet/reference_number">
      14
    </span>
  </span>
  
  <span class="filing_no" tal:condition="viewlet/get_filing_no">
    <span i18n:translate="label_filing_no"
          tal:omit-tag="">
      Filing Number:
    </span>
    <span tal:replace="viewlet/get_filing_no">
      14
    </span>
  </span>
  
  <span class="emailAddress" tal:condition="viewlet/email">
    <span i18n:translate="label_email_address"
          i18n:domain="opengever.dossier" tal:omit-tag="">
      E-Mail:
    </span>
    <a href="#" tal:content="viewlet/email" tal:attributes="href string:mailto:${viewlet/email}"/>
  </span>
</div>
