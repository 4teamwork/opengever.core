<div class="documentByLine"
     id="plone-document-byline"
     i18n:domain="opengever.dossier"
     tal:condition="view/show">

  <span id="lock-icon"
        tal:define="lock_icon view/locked_icon"
        tal:condition="lock_icon">
      <img tal:replace="structure lock_icon" />
  </span>

  <tal:name tal:condition="view/creator">
    <span class="documentAuthor"
          i18n:translate="label_by_author">
      by
      <a href="#"
         tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/author/${view/creator}"
         tal:content="view/authorname"
         tal:omit-tag="not:view/author"
         i18n:name="author">
        Bob Dobalina
      </a>

    </span>
  </tal:name>

  <tal:state>
    <span i18n:translate="label_workflow_state" class="documentStatus">
	  State: 
	</span>
	<span tal:content="view/workflow_state" i18n:translate="" i18n:domain="plone" class="documentAuthor" />
  </tal:state>

  <span class="documentModified">
    <span i18n:translate="box_last_modified" tal:omit-tag="">
      last modified
    </span>
    <span tal:replace="python:view.toLocalizedTime(here.ModificationDate(),long_format=1)">
      August 16, 2001 at 23:35:59
    </span>
  </span>

  <tal:expired tal:condition="view/isExpired">
    <span class="state-expired"
          i18n:translate="time_expired" tal:omit-tag="">expired</span>
  </tal:expired>


</div>
