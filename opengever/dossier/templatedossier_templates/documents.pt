<form name="tabbedview_form"
      method="post"
      action="folder_object"
      tal:attributes="action python: context.absolute_url() + '/create_document_with_template'"
      tal:condition="view/contents"
      >
      <input type="hidden" name="orig_template" tal:attributes="value string:${here/absolute_url}/#${view/view_name}" />
    
    <div class="tabbedview_select">
        Auswählen: <a href="javascript:tabbedview.select_all()">Alle</a>, <a href="javascript:tabbedview.select_none()">Keine</a> 
        <span class="select_folder" style="display:none"> Alle Sichtbaren ausgewählt. <a href="#">Alle im Ordner auswählen</a></span>
        <div tal:replace="structure view/batching" />
    </div>

    <div tal:content="structure view/render_listing" />
    <div class="row horizontal">
      <div id="formfield-form-widgets-title" class="field kssattr-fieldname-form.widgets.title ">
        <label class="horizontal" for="form-widgets-title">
          <span>Titel</span>
        </label>
        <div class="widget z3cformInlineValidation horizontal">
          <input type="text" value="" class="text-widget required textline-field" name="form.widgets.title" id="form-widgets-title" originalvalue=""/>
        </div>
      </div>
    </div>
    <div class="row horizontal">
      <div class="widget z3cformInlineValidation horizontal">
        <span class="option">
          <input type="checkbox" value="selected" class="single-checkbox-widget bool-field" name="form.widgets.paper_form:list" id="form-widgets-paper_form-0" originalvalue="selected"/>
          <label for="form-widgets-paper_form-0">
            <span class="label" i18n:translate="">Edit directly after the creation</span>
          </label>
        </span>
        <input type="hidden" value="1" name="form.widgets.paper_form-empty-marker" originalvalue="1"/>
      </div>
    </div>
    <div class="formField row horizontal">
      <input type="submit" value="Speichern" class="submit-widget button-field context" name="form.buttons.save" id="form-buttons-save"/>
      <input type="submit" value="Abbrechen" class="submit-widget button-field standalone" name="form.buttons.cancel" id="form-buttons-cancel"/>
    </div>
</form>
<p tal:condition="not: view/contents">
   Keine Inhalte vorhanden 
</p>