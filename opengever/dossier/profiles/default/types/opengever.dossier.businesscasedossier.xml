<?xml version="1.0"?>
<object name="opengever.dossier.businesscasedossier" meta_type="Dexterity FTI"
        i18n:domain="opengever.dossier" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">Business Case Dossier</property>
  <property name="description" i18n:translate=""></property>
  <property name="content_icon">folder_icon.gif</property>
  <property name="allow_discussion">False</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="opengever.dossier.businesscasedossier" />
    <element value="opengever.document.document" />
    <element value="ftw.task.task" />
    <element value="ftw.mail.mail"/>
  </property>

  <!-- schema interface -->
  <property name="schema">opengever.dossier.businesscase.IBusinessCaseDossier</property>

  <!-- class used for content items -->
  <property name="klass">opengever.dossier.base.DossierContainer</property>

  <!-- add permission -->
  <property name="add_permission">opengever.dossier.AddBusinessCaseDossier</property>
  
  <!-- enabled behaviors -->
  <property name="behaviors">
    <element value="opengever.base.behaviors.base.IOpenGeverBase" />
    <element value="opengever.base.behaviors.reference.IReferenceNumber" />
    <element value="ftw.journal.interfaces.IAnnotationsJournalizable" />
    <element value="opengever.dossier.behaviors.dossier.IDossier" />
    <element value="opengever.dossier.behaviors.participation.IParticipationAware" />
    <element value="opengever.base.behaviors.classification.IClassification" />
    <element value="opengever.base.behaviors.lifecycle.ILifeCycle" />
    <element value="plone.app.content.interfaces.INameFromTitle" />
    <element value="opengever.tabbedview.interfaces.ITabbedViewEnabled" />
    <element value="opengever.trash.trash.ITrashable" />
  </property>

  <!-- View information -->
  <property name="immediate_view">tabbed_view</property>
  <property name="default_view">tabbed_view</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
    <element value="view"/>
    <element value="tabbed_view" />
  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="(selected layout)"/>
  <alias from="edit" to="@@edit"/>
  <alias from="sharing" to="@@sharing"/>
  <alias from="view" to="@@view"/>

  <!-- Actions -->
  <action title="View" action_id="view" category="object" condition_expr=""
          url_expr="string:${object_url}" visible="False">
    <permission value="View"/>
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
          url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content"/>
  </action>
  <action title="Docu Composer" action_id="docu_composer" category="object" condition_expr=""
          url_expr="string:${object_url}/docucomposer-wizard" visible="True">
    <permission value="Add portal content"/>
  </action>
  <action title="Templates" action_id="document_with_template" category="object" condition_expr=""
          url_expr="string:${object_url}/document_with_template" visible="True">
    <permission value="Add portal content"/>
  </action>


  <!-- Tabbedview tabs-->
  <action title="Overview" action_id="overview" category="arbeitsraum-tabs"
          condition_expr="" url_expr="string:#" visible="True">
    <permission value="View"/>
  </action>
  <action title="Subdossiers" action_id="subdossiers" category="arbeitsraum-tabs"
          condition_expr="object/show_subdossier" url_expr="string:#" visible="True">
    <permission value="View"/>
  </action>
  <action title="Documents" action_id="documents" category="arbeitsraum-tabs"
          condition_expr="" url_expr="string:#" visible="True">
    <permission value="View"/>
  </action>
  <action title="Tasks" action_id="tasks" category="arbeitsraum-tabs"
          condition_expr="" url_expr="string:#" visible="True">
    <permission value="View"/>
  </action>
  <action title="Journal" action_id="journal" category="arbeitsraum-tabs"
          condition_expr="" url_expr="string:#" visible="True">
    <permission value="View"/>
  </action>
  <action title="Sharing" action_id="sharing" category="arbeitsraum-tabs"
          condition_expr="" url_expr="string:#"
          visible="False">
    <permission value="View"/>
  </action>
  <action title="Participants" action_id="participants" category="arbeitsraum-tabs"
          condition_expr="" url_expr="string:#" visible="True">
    <permission value="View"/>
  </action>
  <action title="Trash" action_id="trash" category="arbeitsraum-tabs"
          condition_expr="" url_expr="string:#" visible="True">
  </action>
  <action title="Cover (PDF)" action_id="export_pdf" category="object_buttons"
     condition_expr="" url_expr="string:${object_url}/export_pdf"
     visible="True">
   <permission value="View"/>
  </action>
  <action title="Add Participant" action_id="add_participant"
     category="object_buttons" condition_expr=""
     url_expr="string:${object_url}/@@add-participation" visible="True">
   <permission value="Modify portal content"/>
  </action>
  <action title="Properties" action_id="properties" category="object_buttons"
     condition_expr="" url_expr="string:./view" visible="True">
   <permission value="View"/>
  </action>
</object>
