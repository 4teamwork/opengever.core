<div class="documentByLine"
	 id="plone-document-byline"
     i18n:domain="opengever.task"
     tal:condition="view/show">

  <ul>
    <li tal:attributes="class string:byline-icon ${view/get_css_class}">
      &nbsp;
    </li>

    <li tal:define="lock_icon view/locked_icon" tal:condition="lock_icon" >
      <span id="lock-icon" class="function-lock"/>
    </li>

    <li class="responsible" tal:condition="here/responsible">
      <span class="label" i18n:domain="opengever.task"
            i18n:translate="label_by_author">
        by
        <tal:responsible i18n:name="author" i18n:domain="opengever.task">
          <tal:link replace="structure view/responsible_link" />
        </tal:responsible>
      </span>
    </li>

    <li class="review_state">
      <span class="label" i18n:translate="label_workflow_state_byline">
        State:
      </span>
      <span tal:content="view/workflow_state"
            i18n:translate="" i18n:domain="plone" />
    </li>

    <li class="last_modified">
        <span class="label">
          <span i18n:translate="label_last_modified">
            last modified
          </span>:
        </span>
        <span tal:replace="python:view.toLocalizedTime(here.ModificationDate(),long_format=1)" />
    </li>

    <li class="document_created">
      <span class="label">
        <span i18n:translate="label_created">
          created
        </span>:
      </span>
      <span tal:replace="python:view.toLocalizedTime(here.CreationDate(),long_format=1)" />
    </li>

    <li class="state-expired" tal:condition="view/isExpired">
        <span class="state-expired"
              i18n:translate="time_expired" tal:omit-tag="">expired</span>
    </li>

    <li class="sequenceNumber" tal:condition="view/sequence_number">
        <span class="label"
              i18n:translate="label_sequence_number" i18n:domain="opengever.dossier">
          Sequence Number:
        </span>
        <span tal:replace="python: '%s %s' % (view.client_id(), view.sequence_number())" />
    </li>

  </ul>
</div>
