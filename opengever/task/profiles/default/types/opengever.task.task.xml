<?xml version="1.0"?>
<object name="opengever.task.task" meta_type="Dexterity FTI"
        i18n:domain="opengever.task" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <!-- Basic metadata -->
  <property name="title" i18n:translate="">Task</property>
  <property name="description" i18n:translate=""></property>
  <property name="content_icon">document_icon.gif</property>

  <property name="allow_discussion">False</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="opengever.task.task" />
    <element value="opengever.document.document" />
  </property>


  <!-- schema interface -->
  <property name="schema">opengever.task.task.ITask</property>

  <!-- class used for content items -->
  <property name="klass">opengever.task.task.Task</property>

  <!-- add permission -->
  <property name="add_permission">opengever.task.AddTask</property>
  <property name="add_permission">opengever.task.EditTask</property>

  <!-- enabled behaviors -->
  <property name="behaviors">
    <element value="opengever.tabbedview.interfaces.ITabbedViewEnabled" />
    <element value="opengever.trash.trash.ITrashable" />
  </property>

  <!-- View information -->
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="view_methods">
    <element value="view"/>

  </property>

  <!-- Method aliases -->
  <alias from="(Default)" to="(selected layout)"/>
  <alias from="edit" to="@@edit"/>
  <alias from="sharing" to="@@sharing"/>
  <alias from="view" to="@@view"/>

  <!-- Actions -->
  <action title="View" action_id="view" category="object" condition_expr=""
          url_expr="string:${object_url}" visible="False">
    <permission value="View"/>
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
          url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content"/>
  </action>
  <action title="Add response" action_id="addresponse" category="folder_factories"
          condition_expr="" url_expr="string:${object_url}/addresponse"
          visible="True">
    <permission value="Add portal content"/>
  </action>
  <action title="Attach remote document"
          action_id="attach_remote_document" category="folder_factories" condition_expr=""
          url_expr="string:${object_url}/choose_source_dossier" visible="True">
    <permission value="Add portal content"/>
  </action>
</object>