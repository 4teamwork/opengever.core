<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="opengever.task">
  <body>

    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="python: context.Title()"/>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <table class="listing task-listing">
          <tal:rep tal:define="group python: view.groups[0]">
            <tr tal:repeat="widget group/widgets/values">
            <span tal:define="index repeat/widget/index"/>

              <tal:block condition="python: widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description','responsible', 'ITransition.transition', 'issuer', 'relatedItems', 'deadline') and widget.value">

                <th tal:content="widget/label" ></th>
                <td tal:content="structure widget/render" />
              </tal:block>
              <tal:block condition="python:widget.__name__  == 'responsible' and widget.value">
                <th tal:content="widget/label"></th>
                <td tal:content="structure view/responsible_link" />
              </tal:block>
              <tal:block condition="python:widget.__name__  == 'issuer' and widget.value">
                <th tal:content="widget/label"></th>
                <td tal:content="structure view/issuer_link" />
              </tal:block>
              <tal:block condition="python:widget.__name__ == 'deadline' and widget.value">
                <th tal:content="widget/label"></th>
                <td tal:content="python:here.toLocalizedTime(str(context.deadline))"/>
              </tal:block>
            </tr>
          </tal:rep>
          <tr>
            <th i18n:domain="opengever.task" i18n:translate="label_workflow_state">State</th>
            <td i18n:translate="" i18n:domain="plone" tal:content="python: view.context.portal_workflow.getInfoFor(view.context, 'review_state')" />
          <tr>
          <tr>
            <th i18n:domain="opengever.task" i18n:translate="label_last_modified">Last change</th>
            <td tal:content="python: view.context.modified().strftime('%d.%m.%Y %H:%M')"/>
          </tr>
          <tal:rep tal:define="group python: view.groups[1]">
            <tr tal:repeat="widget group/widgets/values">
              <tal:block condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description','responsible', 'ITransition.transition', 'date_of_completion') and widget.value and widget.value != ('', '', '')">
                <th tal:content="widget/label"></th>
                <td tal:content="structure widget/render" />
              </tal:block>
              <tal:block condition="python:widget.__name__  == 'responsible'and widget.value">
                <th tal:content="widget/label"></th>
                <td tal:content="structure python: len(widget.value) > 0 and widget.value[0] or '' " />
              </tal:block>
              <tal:block condition="python:widget.__name__ == 'date_of_completion' and widget.value">
                <th tal:content="widget/label"></th>
                <td tal:content="python:here.toLocalizedTime(str(context.date_of_completion))"/>
              </tal:block>
            </tr>
          </tal:rep>
        </table>

        <div class="visualClear"><!----></div>

        <tal:items define="items view/getContainingTask"
                   condition="items">
          <div tal:condition="items"><h2 i18n:translate="containing_task">Containing Tasks:</h2></div>
          <ul tal:condition="items">
            <li tal:repeat="item items">
              <img tal:attributes="src item/getIcon" />
              <a href="" tal:attributes="href item/absolute_url|nothing" tal:omit-tag="not: item/absolute_url|nothing"><span tal:content="item/Title" /></a>
            </li>
          </ul>
        </tal:items>

        <tal:items define="items view/getSubTasks"
                   condition="items">
          <div tal:condition="items"><h2 i18n:translate="subtasks">Subtasks:</h2></div>
          <ul tal:condition="items">
            <li tal:repeat="item items">
              <img tal:attributes="src item/getIcon" />
              <a href="" tal:attributes="href item/getURL|nothing" tal:omit-tag="not: item/getURL|nothing"><span tal:content="item/Title" /></a>
            </li>
          </ul>
        </tal:items>

        <tal:items define="item view/getPredecessorTask"
                   condition="item">
          <div tal:condition="item"><h2 i18n:translate="predecessor">Predecessor Task:</h2></div>
          <div tal:content="structure python:view.render_indexed_task(item)" />
        </tal:items>

        <tal:items define="items view/getSuccessorTasks"
                   condition="items">
          <div><h2 i18n:translate="successors">Successor Tasks:</h2></div>
          <ul tal:condition="items">
            <li tal:repeat="item items"
                tal:content="structure python:view.render_indexed_task(item)" />
          </ul>
        </tal:items>
        <tal:items define="items view/getSubDocuments">
        <div tal:condition="items"><h2 i18n:translate="documents">Documents:</h2></div>
         <ul tal:condition="items">
            <li tal:repeat="item items">
              <img tal:attributes="src item/getIcon" />
              <a href="" tal:attributes="href item/absolute_url|nothing" tal:omit-tag="not: item/absolute_url|nothing"><span tal:content="item/Title" /></a>
            </li>
          </ul>
        </tal:items>

        <div class="visualClear"><!----></div>
        <div tal:replace="structure provider:opengever.task.beneathTask" />
        <div class="visualClear"><!----></div>
        <div tal:replace="structure provider:plone.belowcontentbody" />
        <div class="visualClear"><!----></div>
      </tal:main-macro>
    </metal:main>

  </body>
</html>

