                    "_zope_schema_type": "Choice",
                    "default": "unprotected",
                    "enum": [
                        null,
                        "unprotected",
                        "confidential",
                        "classified"
                    ]
                },
                "privacy_layer": {
                    "type": [
                        "null",
                        "string"
                    ],
                    "title": "Datenschutzstufe",
