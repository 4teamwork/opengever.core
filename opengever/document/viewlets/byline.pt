<div class="documentByLine" id="plone-document-byline"
     i18n:domain="opengever.document" tal:condition="view/show" >

  <ul>
    <li tal:attributes="class string:byline-icon ${view/get_css_class}">
      &nbsp;
    </li>

    <li tal:define="lock_icon view/locked_icon" tal:condition="lock_icon" >
      <span id="lock-icon" class="function-lock"/>
    </li>

    <li tal:condition="context/document_author" class="document_author">
      <span class="label" i18n:translate="label_by_author">
        by
        <tal:autor content="context/document_author"
                   omit-tag="not:context/document_author"
                   i18n:name="author">
          Bob Dobalina
        </tal:autor>
      </span>
    </li>

    <li tal:condition="context/document_date" class="documentModified">
        <span class="label" i18n:translate="label_start_byline" tal:omit-tag="">
          from
        </span>
        <span tal:replace="python:view.toLocalizedTime(str(here.document_date),long_format=0)" />
    </li>

    <li tal:condition="view/isExpired">
      <span class="state-expired" i18n:translate="time_expired" tal:omit-tag="">
        expired
      </span>
    </li>

    <li tal:condition="view/sequence_number" class="sequenceNumber">
      <span class="label" i18n:translate="label_sequence_number" tal:omit-tag="">
        Sequence Number:
      </span>
      <span tal:replace="view/sequence_number" />
    </li>

    <li tal:condition="view/reference_number" class="referenceNumber">
      <span class="label" i18n:translate="label_reference_number">
        Reference Number:
      </span>
      <span tal:replace="view/reference_number" />
    </li>

  </ul>
</div>
