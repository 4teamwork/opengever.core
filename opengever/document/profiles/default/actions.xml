<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="folder_buttons" meta_type="CMF Action Category">
  <property name="title"></property>

  <object name="send_as_email" meta_type="CMF Action" i18n:domain="opengever.document">
   <property name="title" i18n:translate="action_label_send_as_email">Send as email</property>
   <property name="description" i18n:translate="action_help_send_as_email"></property>
   <property name="url_expr">string:send_documents_as_email:method</property>
   <property name="icon_expr"></property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>

  <object name="checkout" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="action_label_checkout">Checkout</property>
   <property name="description" i18n:translate="action_help_checkout"></property>
   <property name="url_expr">string:checkout_documents:method</property>
   <property name="icon_expr"></property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>

  <object name="checkin" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="action_label_checkin">Checkin</property>
   <property name="description" i18n:translate="action_help_checkin"></property>
   <property name="url_expr">string:checkin_documents:method</property>
   <property name="icon_expr"></property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
  
 </object>
</object>
