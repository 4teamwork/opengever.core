<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:grok="http://namespaces.zope.org/grok"
    i18n_domain="opengever.base">

  <plone:behavior
      title="OpenGeverBase"
      description="OpenGever Base behavior"
      provides="opengever.base.behaviors.IOpenGeverBase"
      factory=".base.OpenGeverBase"
      for="plone.dexterity.interfaces.IDexterityContent"
      />
      
  <plone:behavior
      title="ReferenceNumber"
      description="OpenGever ReferenceNumber Behavior"
      provides="opengever.base.behaviors.reference.IReferenceNumber"
      factory="plone.behavior.AnnotationStorage"
      marker="opengever.base.behaviors.reference.IReferenceNumberMarker"
      for="plone.dexterity.interfaces.IDexterityContent"
      />
      
  <plone:behavior
      title="Creator Aware"
      description="Remembers the creator in a hidden creators field"
      provides="opengever.base.behaviors.creator.ICreator"
      factory=".creator.CreatorAware"
      marker=".creator.ICreatorAware"
      for="plone.dexterity.interfaces.IDexterityContent"
      />

</configure>
