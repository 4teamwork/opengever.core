<div class="documentByLine" id="plone-document-byline"
     i18n:domain="opengever.repository">

  <ul>
    <li tal:attributes="class string:byline-icon ${view/get_css_class}">
      &nbsp;
    </li>

    <li>
      <span class="label" i18n:translate="label_workflow_state">
        State:
      </span>
      <span tal:content="viewlet/workflow_state" i18n:domain="plone" i18n:translate=""/>
    </li>

    <li class="privacy_layer" tal:condition="context/privacy_layer">
        <span tal:content="context/privacy_layer"
              i18n:translate="" i18n:domain="opengever.base"/>
    </li>

    <li class="public_trial" tal:condition="context/public_trial">
        <span i18n:translate="label_public_trial" i18n:domain="opengever.base">
          Public Trial
        </span>
        <span tal:content="context/public_trial" i18n:translate="" i18n:domain="opengever.base"/>
    </li>

  </ul>
</div>
