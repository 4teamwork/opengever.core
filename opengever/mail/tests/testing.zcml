    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:db="http://namespaces.zope.org/db"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="opengever.mail">

	<include package="opengever.ogds.base" />
