<div class="documentByLine" id="plone-document-byline"
     i18n:domain="opengever.mail" tal:condition="view/show">

  <ul>
    <li tal:attributes="class string:byline-icon ${view/get_css_class};
                        title context/Type">
      &nbsp;
    </li>

    <li tal:define="lock_icon view/locked_icon" tal:condition="lock_icon" >
      <span id="lock-icon" class="function-lock"/>
    </li>

    <li class="created" >
      <span class="label" i18n:translate="byline_created">
        Created:
        <tal:date tal:replace="python:view.toLocalizedTime(here.CreationDate(), long_format=1)"
                  i18n:name="date" />
      </span>
    </li>

    <li class="sequenceNumber" tal:condition="view/sequence_number">
        <span class="label" i18n:translate="label_sequence_number">
          Sequence Number:
        </span>
        <span tal:replace="view/sequence_number" />
    </li>

    <li class="referenceNumber" tal:condition="view/reference_number">
        <span class="label" i18n:translate="label_reference_number">
          Reference Number:
        </span>
        <span tal:replace="view/reference_number" />
    </li>

  </ul>
</div>
